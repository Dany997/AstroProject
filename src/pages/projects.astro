---
const response = await fetch('http://localhost:5000/projects');
const projects: { id: string; title: string; description: string }[] = await response.json();

import NewLayout from "../layouts/newLayout.astro";
---



<NewLayout>
  <section class="projects">
    <h1>Moje projekty</h1>
    <ul>
      {projects.map((project: { id: string; title: string; description: string }) => (
        <li>
          <a href={`/projects/${project.id}`}>
            <h2>{project.title}</h2>
            <p>{project.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </section>
</NewLayout>