

---
import NewLayout from '../layouts/newLayout.astro';


const projects = [
  { id: 1, title: "Strona Portfolio", description: "Minimalistyczne portfolio w Astro.", link: "/projects/1" },
  { id: 2, title: "Aplikacja To-Do", description: "Lista zada≈Ñ z backendem w Node.js.", link: "/projects/2" },
  { id: 3, title: "Sklep Online", description: "E-commerce w Next.js.", link: "/projects/3" }
];
---
<NewLayout>



  <section class="projects">
    <h1>Moje projekty</h1>
    <ul>
      {projects.map((project) => {
        return (
          <li>
            <a href={project.link}>
              <h2>{project.title}</h2>
              <p>{project.description}</p>
            </a>
          </li>
        );
      })}
    </ul>
  </section>

</NewLayout>